<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Update_And_Delete_Activity">

    <TextView
        android:id="@+id/task_details1"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:text="Save"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/updateTextView1"
        android:layout_width="80dp"
        android:layout_height="29dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="17dp"
        android:gravity="center"
        android:text="Update"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/task_details1"
        app:layout_constraintTop_toBottomOf="@+id/updateImageView1" />

    <ImageView
        android:id="@+id/updateImageView1"
        android:layout_width="80dp"
        android:layout_height="44dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="17dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/task_details1"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_update_24" />

    <TextView
        android:id="@+id/deleteTextView1"
        android:layout_width="80dp"
        android:layout_height="29dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="17dp"
        android:gravity="center"
        android:text="Delete"
        android:textColor="@color/black"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/task_details1"
        app:layout_constraintTop_toBottomOf="@+id/deleteImageView1"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/deleteImageView1"
        android:layout_width="80dp"
        android:layout_height="44dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="17dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/task_details1"
        app:layout_constraintTop_toBottomOf="@+id/updateTextView1"
        app:srcCompat="@drawable/baseline_delete_241" />


</androidx.constraintlayout.widget.ConstraintLayout>